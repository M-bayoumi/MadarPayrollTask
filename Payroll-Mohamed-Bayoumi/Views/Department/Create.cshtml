@model Payroll_Mohamed_Bayoumi.Models.Department

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Create Department</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Department Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter department name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Create" class="btn btn-success btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
