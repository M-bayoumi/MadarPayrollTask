@model Payroll_Mohamed_Bayoumi.Models.AbsencePenalty

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white text-center">
            <h2>Edit Absence Penalty</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div class="form-group mb-3">
                    <label asp-for="AbsenceDays" class="form-label">AbsenceDays</label>
                    <select asp-for="AbsenceDays" class="form-control">
                        <option value="1">Zero Or One</option>
                        <option value="2">More Than Two Days</option>
                        <option value="3">More Than Five Days</option>
                        <option value="4">More Than Ten Days</option>
                        <option value="5">More Than Fifteen Days</option>
                    </select>
                    <span asp-validation-for="AbsenceDays" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PenaltyPercentage" class="form-label">Penalty Percentage</label>
                    <input asp-for="PenaltyPercentage" class="form-control" placeholder="Enter penalty percentage" />
                    <span asp-validation-for="PenaltyPercentage" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <div class="form-check">
                        <input asp-for="IsBonus" class="form-check-input" type="checkbox" />
                        <label asp-for="IsBonus" class="form-check-label">Is Bonus</label>
                        <span asp-validation-for="IsBonus" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center">
                    <input type="submit" value="Save" class="btn btn-success btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
