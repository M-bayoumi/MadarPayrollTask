<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Payroll Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40; 
            padding-top: 20px;
        }

        .sidebar .nav-link {
            color: #f8f9fa; 
            padding: 15px;
            font-weight: bold;
            border-radius: 5px; 
            transition: background-color 0.3s ease; 
        }

        .sidebar .nav-link:hover {
            background-color: #007bff;
            color: #fff;
        }

        .sidebar .nav-item.active .nav-link {
            background-color: #007bff;
            color: #fff;
        }

        .sidebar .nav-item {
            margin-bottom: 10px;
        }

        .content {
            margin-left: 270px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <div class="sidebar">
            <div class="container">
                <a class="navbar-brand text-white" asp-controller="Department" asp-action="Index">Payroll Management</a>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Department" asp-action="Index">Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Index">Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Salary" asp-action="Index">Salaries</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DepartmentIncentive" asp-action="Index">Department Incentives</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="SeniorityIncentive" asp-action="Index">Seniority Incentives</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AbsencePenalty" asp-action="Index">Absence Penalties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AttendanceRecord" asp-action="Index">Attendance Records</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reports" asp-action="Employees">Employees Report</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" asp-controller="Reports" asp-action="Attendance">Attendance Report</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reports" asp-action="Salaries">Salaries Report</a>
                    </li>

                </ul>
            </div>
        </div>
    </header>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
