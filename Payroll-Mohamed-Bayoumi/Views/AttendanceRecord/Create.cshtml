@model Payroll_Mohamed_Bayoumi.Models.AttendanceRecord

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Create Attendance Record</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="EmployeeId" class="form-label">Employee</label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="@(ViewData["Employees"] as SelectList)">
                        <option value="">Select a Employee</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="AbsenceDays" class="form-label">AbsenceDays</label>
                    <select asp-for="AbsenceDays" class="form-control">
                        <option value="1">Zero Or One</option>
                        <option value="2">More Than Two Days</option>
                        <option value="3">More Than Five Days</option>
                        <option value="4">More Than Ten Days</option>
                        <option value="5">More Than Fifteen Days</option>
                    </select>
                    <span asp-validation-for="AbsenceDays" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Month" class="form-label">Month</label>
                    <select asp-for="Month" class="form-control">
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                    <span asp-validation-for="AbsenceDays" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Year" class="form-label">Year</label>
                    <input asp-for="Year" class="form-control" placeholder="Enter Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Create" class="btn btn-success btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
