@model Payroll_Mohamed_Bayoumi.Models.AttendanceRecord

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h2>Delete Attendance Record</h2>
        </div>
        <div class="card-body">
            <h3 class="text-center">Are you sure you want to delete this attendance record?</h3>
            <dl class="row mt-3">
                <dt class="col-2 text-start">Employee Name:</dt>
                <dd class="col-10 text-start">@Model.Employee?.Name</dd>
            </dl>
            <dl class="row mt-3">
                <dt class="col-2 text-start">AbsenceDays:</dt>
                <dd class="col-10 text-start">@Model.AbsenceDays</dd>
            </dl>
            <dl class="row mt-3">
                <dt class="col-2 text-start">Month:</dt>
                <dd class="col-10 text-start">@Model.Month</dd>
            </dl>
            <dl class="row mt-3">
                <dt class="col-2 text-start">Year:</dt>
                <dd class="col-10 text-start">@Model.Year</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
