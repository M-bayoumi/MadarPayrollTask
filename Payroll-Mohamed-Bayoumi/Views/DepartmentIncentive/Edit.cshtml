@model Payroll_Mohamed_Bayoumi.Models.DepartmentIncentive

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white text-center">
            <h2>Edit Department Incentive</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="IncentivePercentage" class="form-label">Incentive Percentage</label>
                    <input asp-for="IncentivePercentage" class="form-control" placeholder="Enter incentive percentage" />
                    <span asp-validation-for="IncentivePercentage" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DepartmentId" class="form-label">Department</label>
                    <select asp-for="DepartmentId" class="form-control" asp-items="@(ViewData["Departments"] as SelectList)">
                        <option value="">Select a Department</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
